<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:textColor="#535353"
        android:textSize="40dp"
        android:text="7*2"
        android:gravity="right"
        android:paddingRight="20dp"
        android:layout_above="@+id/output"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:textColor="@color/black"
        android:textSize="90dp"
        android:text="14"
        android:gravity="right"
        android:paddingRight="20dp"
        android:layout_above="@+id/buttons"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/all"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_all"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_div"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_div"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_clear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_clear"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_7"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_8"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_9"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_mul"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_mul"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_5"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_6"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_sub"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_sub"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_2"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_3"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_add"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_add"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:layout_marginStart="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_dot"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:id="@+id/btn_equal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_equal"
                android:layout_marginRight="25dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
